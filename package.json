{
  "name": "kotlin_utils",
  "version": "1.0.0",
  "description": "A nice greeter",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mauricio-b-mossi/kotlin_utils.git"
  },
  "keywords": ["Hello", "Greeter"],
  "author": "Mauricio Mossi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mauricio-b-mossi/kotlin_utils/issues"
  },
  "homepage": "https://github.com/mauricio-b-mossi/kotlin_utils#readme",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "jest": "^29.4.2",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.5"
  },
  "files": [
    "lib/**/*"
  ]
}
